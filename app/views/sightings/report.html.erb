<h1>Sightings</h1>

<% @sightings.each do |sighting| %>
  <ul>
    <li><%= "Species: #{sighting.species.name}" %></li>
    <li><%= "Location: #{sighting.location}" %>
    <li><%= "Time: #{sighting.time.strftime("%I:%M%p")}" %></li>
    <li><%= "Date: #{sighting.date}" %></li>
    <li><%= "Region: #{sighting.region.name}" %></li>
    <a href="/sightings/<%= sighting.id %>" data-method="delete" rel="nofollow"><button>Delete</button></a>
    <a href="/sightings/<%= sighting.id %>/edit"><button>Edit</button></a></li>
  </ul>
<% end %>


<p><a href="/sightings/">Go Back</a></p>
